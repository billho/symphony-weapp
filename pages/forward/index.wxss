/* pages/forward/index.wxss */

.forward {
  display: flex;
  flex-direction: column;
  height: 100vh;
  padding: 15px;
  box-sizing: border-box;
  text-align: center;
}

.forward__panel {
  flex: 1;
  align-self: center;
  display: flex;
  flex-direction: row;
}

.forward__main {
  align-self: center;
}

.forward__link {
  color: #999;
  font-size: 14px;
}

.forward__logo {
  height: 80vw;
  width: 80vw;
}

.forward__go {
  margin-top: 30px;
  color: #4285f4;
}
